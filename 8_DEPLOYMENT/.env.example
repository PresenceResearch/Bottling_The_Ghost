# Clara Bot Configuration
# Copy this to .env and fill in your values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# LLM Configuration
LLM_PROVIDER=ollama  # Options: claude, ollama, both
CLAUDE_API_KEY=your_claude_api_key_here  # Only needed if using Claude
OLLAMA_MODEL=mistral  # Options: mistral, mixtral, llama3
OLLAMA_TEMPERATURE=0.85
OLLAMA_TOP_P=0.9

# RAG Configuration
VECTOR_DB=chroma  # Options: chroma, faiss
EMBEDDING_MODEL=all-MiniLM-L6-v2
TOP_K_RESULTS=5  # Number of relevant loops to retrieve

# Paths
CORPUS_PATH=../6_CORPUS
PERSONALITY_PATH=../1_PROMPTS/clara_personality_master.yaml
VECTOR_DB_PATH=./chroma_db

# Bot Behavior
MAX_RESPONSE_LENGTH=2000  # Telegram message limit
LOOP_NAMING=true  # Include loop numbers in responses
SCAR_INJECTION=true  # Inject scar phrases when relevant

# Deployment
ENVIRONMENT=development  # Options: development, production
PORT=5000
WEBHOOK_URL=  # Leave empty for polling mode
